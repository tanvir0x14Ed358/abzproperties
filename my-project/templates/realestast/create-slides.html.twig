{% extends 'base.html.twig' %}
    {% block title %}
        <title>ABZ Properties - Create Slides</title>
    {% endblock %}

{% block bodymain %}
		
		<!-- Begin Main -->
		<div role="main" class="main pgl-bg-grey">
			
			
			<!-- Begin content with sidebar -->
			<div class="container">
                            
				<div class="row">
					<div class="col-md-7 content">
						<h2>Create Home Page Slides</h2>
						<div class="contact">
							{{ form_start(form) }}
                                                        {{ form_widget(form) }}
                                                        {{ form_end(form) }}
						</div>
						
					</div>
					<div class="col-md-3 sidebar">
						

						
					</div>
				</div>	
                                                
                                {% for slide in projectSlides %}
                                <div class="row" style="margin-bottom: 30px;">
					<div class="col-md-4 content">
                                            <img alt="" class="img-responsive" src="{{ asset( 'images/slides/') }}{{ slide.image }}">
                                        </div>
                                        <div class="col-md-4 content">
                                            <h3>{{ slide.getProperty().getTitle }}</h3>
                                        </div>
                                        <div class="col-md-4 content">
                                            <a class="btn btn-default btn-sm" href="{{ path('delete-slide', {'id': slide.id}) }}">Delete</a>
                                        </div>
                                        
                                </div>
                                {% endfor %}
			</div>
			<!-- End content with sidebar -->
			
		</div>
		<!-- End Main -->
{% endblock %}



